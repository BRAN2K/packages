{
  "name": "packages-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "validate": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "test": "bun test --coverage",
    "coverage": "powershell -Command Start-Process coverage/index.html",
    "fullcheck": "bun run validate && bun run lint && bun run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,sql}": [
      "prettier --write"
    ]
  }
}
